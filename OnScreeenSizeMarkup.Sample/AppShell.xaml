<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnScreeenSizeMarkup.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnScreeenSizeMarkup.Sample"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Style Sheet"
            ContentTemplate="{DataTemplate local:StylePage}"
            Route="StylePage" />
    </TabBar>

</Shell>
